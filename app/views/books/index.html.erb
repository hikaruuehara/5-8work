<div class="content">
  <p class="pop"><%= notice %></p>
  <h2>Books</h2>
  <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    <% @book.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%=link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>

 <div class="form-area">
   <h2>New book</h2>
   <%= form_with model:@book, url:'/books', local:true do |f| %>
   <%= render 'layouts/error_messages', book: @books %>
   <label>Title</label>
   <span class="field"><%= f.text_field :title %></span>
   <label>Body</label>
   <span class="field"><%= f.text_area :body %></span>
   <span class="field"><%= f.submit 'Create Book'%></span>
   <% end %>
 </div>

</div>
